    x:Class="XamarinDatronik.Views.CrossPlatformToastDemo"
    xmlns:views="clr-namespace:XamarinDatronik.Views"
    BackgroundImageSource="space_background.jpg"
    Title="Toast demo">
    <ContentPage.Content>
        <Grid>
            <Button
                HorizontalOptions="Center"
